/* components/blog-card/blog-card.wxss */
page {
  background-color: #f8f8f8;
}

.blog {
  padding: 20rpx;
  background-color: #fff;
}

.top {
  display: flex;
  align-items: center;
}

.avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.infoContainer {
  display: flex;
  flex-direction: column;
  width: 80%;
}

.blog-nickName {
  font-size: 32rpx;
  color: #4b4b4b;
}

.blog-time {
  font-size: 24rpx;
  color: #939393;
}

.icon-gengduo {
  font-size: 32rpx;
  text-align: center;
}

.blog-content {
  margin: 20rpx 0;
  color: #4b4b4b;
  font-size: 32rpx;
  font-weight: 400;
  line-height: 1.5;
}

.blog-img {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  box-sizing: border-box;
}

.blog-img .img {
  flex: 1;
  width: 500rpx;
  height: 500rpx;
  margin-right: 10rpx;
  margin-bottom: 20rpx;
}

.blog-img .img-sec {
  width: 330rpx;
  height: 330rpx;
  margin-right: 10rpx;
  margin-bottom: 20rpx;
}

.blog-img .img-other {
  width: 231rpx;
  height: 240rpx;
  margin-right: 5rpx;
  margin-bottom: 20rpx;
}
