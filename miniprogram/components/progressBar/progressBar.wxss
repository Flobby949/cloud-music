/* components/progressBar/progressBar.wxss */
.container{
  display: flex;
  align-items: center;
}

.time{
  font-size: 24rpx;
  width: 64rpx;
  padding: 0 30rpx;
  color: #ffffff;
  font-weight: 499;
  line-height: 30rpx;
}

.control{
  flex: 1;
  position: relative;
}

.area{
  width: 100%;
  height: 34rpx;
  position: absolute;
  bottom: -14rpx;
  left: 0;
}

.view{
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  background-color: #d43c33;
}