.comtainer {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 100rpx;
}

.card {
  margin-bottom: 20rpx;
}

.tab {
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 20rpx;
  background: #e9e9e9;
  border: 1rpx solid #e8e8e8;
  color: #697480;
}

.list {
  background-color: #fff;
}

.comment {
  padding: 20rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.1);
}

.title {
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-align: center;
      -ms-flex-align: center;
          align-items: center;
}

.avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.nickname {
  -webkit-box-flex: 1;
      -ms-flex: 1;
          flex: 1;
  color: #222222;
}

.content {
  font-size: 32rpx;
  line-height: 1.5;
  font-weight: 400;
  padding: 20rpx 0;
  color: #333333;
}

.time {
  font-size: 24rpx;
  color: #939393;
}

.ctrl {
  position: fixed;
  width: 100%;
  height: 100rpx;
  left: 0;
  bottom: 0;
  border-top: 2rpx solid rgba(0, 0, 0, 0.1);
}
